
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="section scrollspy" id="work">
    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <br />
            <div class="card">
                <div class="card-body">
                    <div class="card-head">
                        <span class="text-lg text-bold">LOGIN</span>
                    </div>

                    <form class="form floating-label">
                        <div class="form-group">
                            <input name="email" id="email" class="form-control materialize-red-text" type="text" />
                            <label for="email">Email</label>
                        </div>
                        <div class="form-group">
                            <input name="senha" id="senha" class="form-control" type="password" />
                            <label for="senha">Senha</label>
                        </div>
                        <br />
                        <div class="col offset-s7 s5">
                            <button class="btn waves-effect waves-light red darken-1" type="submit">
                                ENTRAR
                                <i class="mdi-content-send right white-text"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
        </div>
    </div>
</div>
